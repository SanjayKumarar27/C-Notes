@using CoreFirstEmp.Models

@model IEnumerable<UserRoleViewModel>

<h2>Admin - User Management</h2>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
            <th>Assign Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span class="badge bg-secondary">@role</span>  <!-- Displaying roles -->
                    }
                </td>
                <td>
                    <form method="post" asp-action="AssignRole">
                        <input type="hidden" name="userId" value="@user.UserId" />  <!-- Hidden field to store UserId -->
                        <select name="roleName" class="form-select">
                            <option value="Admin">Admin</option>
                            <option value="Users">User</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Assign Role</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

